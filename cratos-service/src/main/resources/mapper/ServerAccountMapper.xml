  <select id="queryPageByParam" parameterType="com.baiyi.cratos.domain.param.http.server.ServerAccountParam$ServerAccountPageQuery"
          resultMap="BaseResultMap">
      select * from server_account
      <where>
          <if test="queryName != null and queryName != ''">
              ( name like "%" #{queryName} "%" or username like "%" #{queryName} "%" )
          </if>
          <if test="valid != null">
              and valid = #{valid}
          </if>
          <if test="protocol != null">
              and protocol = #{protocol}
          </if>
      </where>
  </select>

</mapper>